javascript:(function() {
  // If GUI already exists, don't add another one
  if (document.getElementById("bookmarklet-gui")) return;

  // Create container
  let gui = document.createElement("div");
  gui.id = "bookmarklet-gui";
  gui.style.position = "fixed";
  gui.style.top = "20px";
  gui.style.right = "20px";
  gui.style.background = "black";
  gui.style.color = "red";
  gui.style.padding = "20px";
  gui.style.border = "2px solid red";
  gui.style.borderRadius = "15px"; // rounded corners
  gui.style.fontSize = "18px";
  gui.style.zIndex = "9999";
  gui.style.fontFamily = "Arial, sans-serif";
  gui.style.minWidth = "220px";
  gui.style.textAlign = "center";
  gui.style.boxShadow = "0px 0px 15px rgba(255,0,0,0.6)";

  // Title
  let title = document.createElement("div");
  title.textContent = "Bookmarklet GUI";
  title.style.fontSize = "22px";
  title.style.marginBottom = "12px";
  title.style.fontWeight = "bold";
  gui.appendChild(title);

  // Example button
  let btn = document.createElement("button");
  btn.textContent = "Click Me";
  btn.style.background = "black";
  btn.style.color = "red";
  btn.style.border = "1px solid red";
  btn.style.borderRadius = "8px";
  btn.style.padding = "8px 15px";
  btn.style.cursor = "pointer";
  btn.onmouseover = () => btn.style.background = "red";
  btn.onmouseover = () => btn.style.color = "black";
  btn.onmouseout = () => {
    btn.style.background = "black";
    btn.style.color = "red";
  };
  btn.onclick = function() {
    alert("Button clicked!");
  };
  gui.appendChild(btn);

  // Close button
  let closeBtn = document.createElement("div");
  closeBtn.textContent = "âœ–";
  closeBtn.style.position = "absolute";
  closeBtn.style.top = "5px";
  closeBtn.style.right = "10px";
  closeBtn.style.cursor = "pointer";
  closeBtn.style.fontWeight = "bold";
  closeBtn.onclick = function() {
    gui.remove();
  };
  gui.appendChild(closeBtn);

  document.body.appendChild(gui);
})();
